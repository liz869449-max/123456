    <script>
        // 页面切换功能
        function showPage(pageId) {
            // 更新导航按钮状态
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            // 页面切换动画
            const pages = document.querySelectorAll('.page');
            const currentPage = document.querySelector('.page.active');
            const targetPage = document.getElementById(pageId);

            if (currentPage === targetPage) return;

            // 添加过渡效果
            currentPage.classList.remove('active');
            currentPage.classList.add('prev');
            
            setTimeout(() => {
                currentPage.classList.remove('prev');
                targetPage.classList.add('active');
            }, 100);
        }

        // 游戏数据
        const questions = [
            {
                question: "《论语》中'学而时习之，不亦说乎'的'说'字读音是？",
                options: ["shuō", "yuè", "shuì", "tuō"],
                correct: 1,
                explanation: "'说'在这里是'悦'的通假字，读yuè，表示高兴的意思。"
            },
            {
                question: "《出师表》中'先帝创业未半而中道崩殂'的'崩殂'意思是？",
                options: ["失败", "生病", "死亡", "退位"],
                correct: 2,
                explanation: "'崩殂'指帝王去世，是古代对帝王死亡的委婉说法。"
            },
            {
                question: "《岳阳楼记》中'不以物喜，不以己悲'体现了作者怎样的人生态度？",
                options: ["乐观豁达", "忧国忧民", "淡泊名利", "豁达淡然"],
                correct: 3,
                explanation: "这句话体现了作者豁达淡然的人生态度，不因外物好坏和个人得失而或喜或悲。"
            },
            {
                question: "《桃花源记》中'黄发垂髫，并怡然自乐'的'垂髫'指的是？",
                options: ["老人", "小孩", "青年", "妇女"],
                correct: 1,
                explanation: "'垂髫'指小孩，因为古代儿童头发下垂，所以用'垂髫'代指小孩。"
            },
            {
                question: "《醉翁亭记》中'醉翁之意不在酒，在乎山水之间也'的'醉翁'指的是？",
                options: ["李白", "杜甫", "欧阳修", "苏轼"],
                correct: 2,
                explanation: "'醉翁'是欧阳修的自号，他在《醉翁亭记》中自称'醉翁'。"
            },
            {
                question: "《爱莲说》中'出淤泥而不染，濯清涟而不妖'赞美了莲花的什么品质？",
                options: ["美丽动人", "高洁坚贞", "清香怡人", "姿态优雅"],
                correct: 1,
                explanation: "这句话赞美了莲花高洁坚贞的品质，虽处污泥之中却保持纯洁不染。"
            },
            {
                question: "《论语》中'三人行，必有我师焉'体现了怎样的学习态度？",
                options: ["虚心好学", "不耻下问", "学而不厌", "温故知新"],
                correct: 0,
                explanation: "这句话体现了虚心好学的态度，认为每个人都有值得学习的地方。"
            },
            {
                question: "《孟子》中'天时不如地利，地利不如人和'强调了什么的重要性？",
                options: ["自然环境", "地理位置", "人心团结", "时机把握"],
                correct: 2,
                explanation: "这句话强调了人心团结的重要性，认为人和比天时、地利都更重要。"
            },
            {
                question: "《劝学》中'不积跬步，无以至千里'的'跬步'指的是？",
                options: ["一大步", "一小步", "跑步", "止步"],
                correct: 1,
                explanation: "'跬步'指一小步，这句话说明学习要从小处积累，循序渐进。"
            },
            {
                question: "《兰亭集序》中'后之视今，亦犹今之视昔'表达了作者怎样的感慨？",
                options: ["时光易逝", "人生无常", "历史循环", "珍惜当下"],
                correct: 0,
                explanation: "这句话表达了作者对时光易逝的感慨，认为后人看今人就像今人看古人一样。"
            }
        ];

        // 游戏状态
        let gameState = {
            currentPosition: 0,
            score: 0,
            lives: 3,
            startTime: null,
            timerInterval: null,
            currentQuestion: null,
            gameActive: false
        };

        // 开始游戏
        function startGame() {
            gameState = {
                currentPosition: 0,
                score: 0,
                lives: 3,
                startTime: Date.now(),
                timerInterval: null,
                currentQuestion: null,
                gameActive: true
            };

            document.getElementById('startBtn').style.display = 'none';
            document.getElementById('resetBtn').style.display = 'inline-block';
            document.getElementById('questionArea').style.display = 'block';
            document.getElementById('gameResult').textContent = '';

            updateDisplay();
            startTimer();
            showNextQuestion();
        }

        // 计时器
        function startTimer() {
            gameState.timerInterval = setInterval(() => {
                const elapsed = Math.floor((Date.now() - gameState.startTime) / 1000);
                const minutes = Math.floor(elapsed / 60);
                const seconds = elapsed % 60;
                document.getElementById('gameTime').textContent = 
                    `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }, 1000);
        }

        // 显示下一题
        function showNextQuestion() {
            if (gameState.currentPosition >= 4) {
                endGame(true);
                return;
            }

            const questionIndex = Math.floor(Math.random() * questions.length);
            gameState.currentQuestion = questions[questionIndex];
            
            document.getElementById('questionText').textContent = gameState.currentQuestion.question;
            
            const optionsContainer = document.getElementById('optionsContainer');
            optionsContainer.innerHTML = '';
            
            gameState.currentQuestion.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.className = 'option-btn';
                button.textContent = option;
                button.onclick = () => checkAnswer(index);
                optionsContainer.appendChild(button);
            });
        }

        // 检查答案
        function checkAnswer(selectedIndex) {
            const buttons = document.querySelectorAll('.option-btn');
            buttons.forEach(btn => btn.disabled = true);

            const correct = selectedIndex === gameState.currentQuestion.correct;
            
            if (correct) {
                buttons[selectedIndex].classList.add('correct');
                gameState.score += 100;
                gameState.currentPosition++;
                moveCharacter();
                
                setTimeout(() => {
                    if (gameState.currentPosition < 4) {
                        showNextQuestion();
                    } else {
                        endGame(true);
                    }
                }, 1500);
            } else {
                buttons[selectedIndex].classList.add('wrong');
                buttons[gameState.currentQuestion.correct].classList.add('correct');
                gameState.lives--;
                gameState.score = Math.max(0, gameState.score - 50);
                
                if (gameState.lives <= 0) {
                    setTimeout(() => endGame(false), 1500);
                } else {
                    setTimeout(() => {
                        showNextQuestion();
                    }, 2000);
                }
            }
            
            updateDisplay();
        }

        // 移动角色
        function moveCharacter() {
            const currentPos = document.getElementById(`pos${gameState.currentPosition - 1}`);
            const newPos = document.getElementById(`pos${gameState.currentPosition}`);
            
            currentPos.classList.remove('active');
            currentPos.classList.add('completed');
            newPos.classList.add('active');
            
            // 添加移动动画
            newPos.style.animation = 'moveForward 0.6s ease';
            setTimeout(() => {
                newPos.style.animation = '';
            }, 600);
        }

        // 更新显示
        function updateDisplay() {
            document.getElementById('gameScore').textContent = gameState.score;
            document.getElementById('gameLives').textContent = '❤️'.repeat(gameState.lives);
        }

        // 结束游戏
        function endGame(won) {
            gameState.gameActive = false;
            clearInterval(gameState.timerInterval);
            
            const finalTime = document.getElementById('gameTime').textContent;
            const timeBonus = Math.max(0, 300 - Math.floor((Date.now() - gameState.startTime) / 1000));
            const finalScore = gameState.score + timeBonus;
            
            let resultText = '';
            let grade = '';
            
            if (won) {
                if (finalScore >= 800) {
                    grade = '状元 🏆';
                    resultText = '太棒了！您真是诗文大师！';
                } else if (finalScore >= 600) {
                    grade = '榜眼 🥈';
                    resultText = '优秀！您对古诗文很有造诣！';
                } else {
                    grade = '探花 🥉';
                    resultText = '不错！继续努力会更出色！';
                }
            } else {
                grade = '秀才 📚';
                resultText = '别灰心，多练习一定会更好！';
            }
            
            document.getElementById('questionArea').style.display = 'none';
            document.getElementById('gameResult').innerHTML = 
                `<h3>${won ? '🎉 闯关成功！' : '💪 继续加油！'}</h3>`;
            
            document.getElementById('finalScore').innerHTML = `
                <h3>${resultText}</h3>
                <p>最终等级：${grade}</p>
                <p>基础得分：${gameState.score} 分</p>
                <p>时间奖励：${timeBonus} 分</p>
                <p><strong>总分：${finalScore} 分</strong></p>
                <p>用时：${finalTime}</p>
            `;
            document.getElementById('finalScore').style.display = 'block';
        }

        // 重置游戏
        function resetGame() {
            clearInterval(gameState.timerInterval);
            
            // 重置所有位置
            for (let i = 0; i <= 4; i++) {
                const pos = document.getElementById(`pos${i}`);
                pos.classList.remove('active', 'completed');
                if (i === 0) pos.classList.add('active');
            }
            
            document.getElementById('startBtn').style.display = 'inline-block';
            document.getElementById('resetBtn').style.display = 'none';
            document.getElementById('questionArea').style.display = 'none';
            document.getElementById('gameResult').textContent = '';
            document.getElementById('finalScore').style.display = 'none';
            document.getElementById('gameTime').textContent = '00:00';
            document.getElementById('gameScore').textContent = '0';
            document.getElementById('gameLives').textContent = '3';
        }

        // 添加页面加载动画
        window.addEventListener('load', function() {
            document.querySelector('.welcome-content').style.animation = 'fadeInUp 1s ease';
        });

        // 添加键盘导航支持
        document.addEventListener('keydown', function(e) {
            const pages = ['home', 'blessing', 'game'];
            const currentPage = document.querySelector('.page.active').id;
            const currentIndex = pages.indexOf(currentPage);
            
            if (e.key === 'ArrowLeft' && currentIndex > 0) {
                const prevPage = pages[currentIndex - 1];
                document.querySelector(`[onclick="showPage('${prevPage}')"]`).click();
            } else if (e.key === 'ArrowRight' && currentIndex < pages.length - 1) {
                const nextPage = pages[currentIndex + 1];
                document.querySelector(`[onclick="showPage('${nextPage}')"]`).click();
            }
        });

        // 添加触摸滑动支持
        let touchStartX = 0;
        let touchEndX = 0;

        document.addEventListener('touchstart', function(e) {
            touchStartX = e.changedTouches[0].screenX;
        });

        document.addEventListener('touchend', function(e) {
            touchEndX = e.changedTouches[0].screenX;
            handle