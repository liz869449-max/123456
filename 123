<body>
<div class="container">
  <h1>教师节快乐 - 高一7班</h1>

  <!-- 卡片：石头剪刀布 -->
  <div class="card" onclick="addRipple(event,this)">
    <h2>🎮 石头剪刀布</h2>
    <p>三招定胜负，祝老师节日快乐！</p>
    <div id="rpsArea">
      <div id="rpsBoard">✊ 🖐 ✌</div>
      <div class="rps-btn">
        <button onclick="playRPS(0)">✊</button>
        <button onclick="playRPS(1)">🖐</button>
        <button onclick="playRPS(2)">✌</button>
      </div>
      <div id="rpsResult">选一招，看看谁赢！</div>
    </div>
    <button class="zoom-button" onclick="toggleZoom(event)">🔍</button>
  </div>

  <!-- 其他祝福卡片 -->
  <div class="card" onclick="addRipple(event,this)">
    <h2>🌸 感恩有您</h2>
    <p>亲爱的刘老师，感谢您用知识浇灌我们成长，用爱心陪伴我们前行。</p>
  </div>

  <div class="card" onclick="addRipple(event,this)">
    <h2>🌟 祝福满满</h2>
    <p>愿您永远年轻美丽，愿您的每一天都充满阳光和欢笑。</p>
  </div>
</div>

<script>
/* 光效 */
function addRipple(e,el){el.classList.add('active');setTimeout(()=>el.classList.remove('active'),600);}
/* 放大 */
let isZoomed=false;function toggleZoom(e){e.stopPropagation();const card=document.querySelector('.card');card.style.transform=isZoomed?'scale(1)':'scale(1.5)';card.style.zIndex=isZoomed?'1':'10';isZoomed=!isZoomed;}
/* 石头剪刀布 */
const emoji=['✊','🖐','✌'];const board=document.getElementById('rpsBoard');const result=document.getElementById('rpsResult');
function playRPS(player){
  const computer=Math.floor(Math.random()*3);
  board.textContent=`你 ${emoji[player]}  电脑 ${emoji[computer]}`;
  if(player===computer) result.textContent='平局！再试一次！';
  else if((player+1)%3===computer) result.textContent='电脑赢啦！';
  else result.textContent='你赢了！🎉';
}
</script>
