.card::before{content:'';position:absolute;top:50%;left:50%;width:0;height:0;background:radial-gradient(circle,rgba(255,255,255,.8) 0%,transparent 70%);border-radius:50%;transform:translate(-50%,-50%);transition:width .6s,height .6s,opacity .6s;opacity:0;z-index:0;pointer-events:none;}
.card.active::before{width:800px;height:800px;opacity:1;}
/* 放大按钮 */
