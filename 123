<script>
/* å…‰æ•ˆ */
function addRipple(e,el){el.classList.add('active');setTimeout(()=>el.classList.remove('active'),600);}
/* æ”¾å¤§ */
let isZoomed=false;function toggleZoom(e){e.stopPropagation();const card=document.querySelector('.card');card.style.transform=isZoomed?'scale(1)':'scale(1.5)';card.style.zIndex=isZoomed?'1':'10';isZoomed=!isZoomed;}
/* çŸ³å¤´å‰ªåˆ€å¸ƒ */
const emoji=['âœŠ','ğŸ–','âœŒ'];const board=document.getElementById('rpsBoard');const result=document.getElementById('rpsResult');
function playRPS(player){
  const computer=Math.floor(Math.random()*3);
  board.textContent=`ä½ â€ƒ${emoji[player]}â€ƒâ€ƒç”µè„‘â€ƒ${emoji[computer]}`;
  if(player===computer) result.textContent='å¹³å±€ï¼å†è¯•ä¸€æ¬¡ï¼';
  else if((player+1)%3===computer) result.textContent='ç”µè„‘èµ¢å•¦ï¼';
  else result.textContent='ä½ èµ¢äº†ï¼ğŸ‰';
}
